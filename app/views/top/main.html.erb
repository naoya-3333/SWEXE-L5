<%= form_tag '/top/login', method: :post do %>
<%= label_tag :uid, 'ユーザーID' %>
<%= text_field_tag :uid %>
<%= label_tag :pass, 'パスワード' %>
<%= password_field_tag :pass %>
<%= submit_tag '登録' %>
<% end %>
<%= link_to 'ユーザ一覧','/users/index' %>

<% if session[:login_uid] %>
    <p><%= p "ログイン中です（#{session[:login_uid]}さん）"%></p>
<% else %>
    <p>ログインしていません</p>
<% end %>